<h3>Index</h3>

<p>{{link-to 'New space' 'spaces.new'}}</p>

<table>
  <tr>
    <th>id</th>
    <th>Title</th>
    <th>Description</th>
    <th>Published At</th>
    <th>Intro</th>
    <th>Extended</th>
  </tr>
  {{#each}}
    <tr>
      <td>{{link-to id 'spaces.show' this}}</td>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>{{published_at}}</td>
      <td>{{intro}}</td>
      <td>{{extended}}</td>
    </tr>
  {{/each}}
</table>
